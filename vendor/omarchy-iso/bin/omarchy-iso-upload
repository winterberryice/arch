#!/bin/bash

if [ $# -eq 0 ]; then
  echo "Usage: omarchy-iso-upload [release/omarchy.iso]"
  exit 1
fi

if [[ ! -f ~/.config/rclone/rclone.conf ]]; then
  echo "You must first configure rclone with the R2 credentials: omarchy-iso-rclone-config"
  exit 1
fi

rclone copy $1 Omarchy:omarchy/ -P

if [[ -f $1.sig ]]; then
  rclone copy $1.sig Omarchy:omarchy/ -P
fi
